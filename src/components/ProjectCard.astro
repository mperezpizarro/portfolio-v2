---
import GithubIcon from "./icons/GithubIcon.astro";
import TechTag from "./TechTag.astro"

interface Props {
    name: string,
    description: string,
    image?: string,
    link?: string,
    repoLink?: string,
    techs: Array<string>;
}

const { name, description, image, techs, link, repoLink } = Astro.props;
---

<article class="w-full flex flex-col bg-cGray/50 rounded-lg overflow-hidden border-cGray/50 border">
    <picture>
        <a href={link} target="_blank">
            <img src={image ? image : "/logo.png"} alt={`Captura de pantalla del proyecto ${name}`} />
        </a>
    </picture>
    <div class="px-4 py-6 w-full h-full flex flex-col justify-between">
        <header>
            <h3 class="font-semibold text-slate-100 text-lg mb-2">{name}</h4>
            <p class="text-gray-400">{description}</p>
        </header>
        <main class="mt-4">
            <div class="flex items-center gap-2 flex-wrap">
                {techs.map((tech) => {
                    return(
                        <TechTag name={tech} />
                    )
                })}
            </div>
            {repoLink && 
                <a href={repoLink} target="_blank" class="mt-4 flex items-center gap-x-1 text-slate-100 font-medium hover:opacity-75 transition">
                    <GithubIcon class="text-xl" />
                    Ver c√≥digo fuente
                </a>
            }
        </main>
    </div>
</article>
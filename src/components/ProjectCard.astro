---
import GithubIcon from "./icons/GithubIcon.astro";
import TechTag from "./TechTag.astro"

interface Props {
    name: string,
    description: string,
    image?: string,
    link?: string,
    repoLink?: string,
    techs: Array<string>;
}

const { name, description, image, techs, link, repoLink } = Astro.props;
---

<article class="w-full bg-cGray/50 overflow-hidden rounded-lg border-cGray/50 border">
    <picture>
        <a href={link} target="_blank">
            <img src={image ? image : "/logo.png"} alt={`Captura de pantalla del proyecto ${name}`} />
        </a>
    </picture>
    <div class="px-4 pt-6 pb-10">
        <h4 class="font-semibold text-slate-100 text-lg mb-2">{name}</h4>
        <p class="text-gray-400">{description}</p>
        <div class="flex items-center gap-2 flex-wrap mt-6">
            {techs.map((tech) => {
                return(
                    <TechTag name={tech} />
                )
            })}
        </div>
        {repoLink && 
            <a href={repoLink} target="_blank" class="mt-8 inline-flex items-center gap-x-1 text-slate-100 font-medium hover:opacity-75 transition">
                <GithubIcon class="text-xl" />
                Ver c√≥digo fuente
            </a>
        }
    </div>
</article>
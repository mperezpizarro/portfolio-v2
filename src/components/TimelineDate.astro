---
interface Props {
    time: String,
    title: String,
    description: String;
}

const { time, title, description } = Astro.props
---
<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-gray-500 rounded-full mt-1.5 -start-1.5 border border-gray-500"></div>
    <time class="mb-1 text-sm font-normal leading-none text-gray-500">{time}</time>
    <h3 class="text-lg font-semibold text-slate-100">{title}</h3>
    <p class="text-base font-normal text-gray-400">{description}</p>
</li>